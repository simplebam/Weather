<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="界面">
        <Preference
            android:key="change_icons"
            android:title="更换天气图标"/>
        <CheckBoxPreference
            android:key="animation_start"
            android:title="首页 Item 动画"/>
        <CheckBoxPreference
            android:key="multi_city_tips"
            android:title="多城市管理提醒设置"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="系统">
        <Preference
            android:key="change_update_time"
            android:title="自动刷新频率"/>
        <CheckBoxPreference
            android:key="notification_model"
            android:title="通知栏常驻"/>
        <CheckBoxPreference
            android:key="watcher"
            android:title="监控开关"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="其他">
        <EditTextPreference
            android:key="app_feedback"
            android:summary="@string/feedback_description"
            android:title="应用反馈"/>
        <Preference
            android:key="clear_cache"
            android:title="清除缓存"/>
    </PreferenceCategory>
</PreferenceScreen>